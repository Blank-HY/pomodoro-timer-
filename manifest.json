{
    "manifest_version": 2,
    "name": "Jaromodoro Timer",
    "description": "My Pomodoro Timer for getting work done",
    "version": "1.0",
    "icons": {
        "16": "/images/icon16.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "Jaromodoro Timer",
        "default_popup": "popup.html"
    }
}